<launch>
    <!-- run this on PC client -->
    <arg name="multi_robot_name" default=""/>
    <include file="$(find rtabmap_ros)/launch/rtabmap.launch">
      <param name="rtabmap_args" value="--delete_db_on_start --Optimizer/GravitySigma 0.3"/>
      <!--param name="subscribe_rgbd" type="bool" value="true" />
      <param name="rgbd_topic" type="string" value="/camera/rgbd_image" />
      <param name="compressed" type="bool" value="true" /-->
      
      <arg name="depth_topic" value="/camera/aligned_depth_to_color/image_raw" />
      <arg name="rgb_topic" value="/camera/color/image_raw" />
      <arg name="camera_info_topic" value="/camera/color/camera_info" />
      <arg name="approx_sync" value="false" />
      <arg name="wait_imu_to_init" value="true" />
      <arg name="imu_topic" value="/rtabmap/imu" />
    </include>

    <param name="robot_description"
	  command="$(find xacro)/xacro --inorder '$(find terabot_description)/urdf/terabot.xacro'" />

    <node pkg="robot_state_publisher" type="robot_state_publisher" name="robot_state_publisher">
      <param name="publish_frequency" type="double" value="50.0" />
      <param name="tf_prefix" value="$(arg multi_robot_name)"/>
    </node>

  <node name="joint_state_publisher" pkg="joint_state_publisher" type="joint_state_publisher" />
</launch>